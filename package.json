{
  "name": "mdui.jq",
  "version": "3.0.0",
  "description": "拥有和 jQuery 相似 API 的轻量级 JavaScript 工具库",
  "type": "module",
  "main": "dist/jq.js",
  "module": "dist/jq.esm.js",
  "types": "es/index.d.ts",
  "scripts": {
    "eslint": "eslint --fix src/**/*.ts",
    "test": "eslint --fix test/**/*.ts && vite",
    "build": "npm run eslint && rimraf es && tsc -p src/tsconfig.json",
    "bundle": "npm run build && rimraf dist && rollup -c",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "files": [
    "dist",
    "es",
    "src",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zdhxiong/mdui.jq.git"
  },
  "keywords": [
    "mdui",
    "jQuery",
    "JQ"
  ],
  "author": "zdhxiong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zdhxiong/mdui.jq/issues"
  },
  "homepage": "https://github.com/zdhxiong/mdui.jq#readme",
  "dependencies": {
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.2.0",
    "jquery": "^3.6.0",
    "mocha": "^8.3.2",
    "pinst": "^2.1.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.45.2",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.2.4",
    "vite": "^2.1.5"
  },
  "engines": {
    "node": ">=14"
  }
}
